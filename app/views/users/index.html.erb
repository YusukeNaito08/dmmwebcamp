<main>
  <div class ="container mt-5">
    <div class="row">
      <div class="col-md-3">
       <%= render 'userinfo', user: @user %>

       <%= render 'books/form', book: @book %>
     </div>

     <div class="col-md-8">
     <table class="table">
     <h3>Users</h3>
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">image</th>
          <th scope="col">name</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
      <tr>
        <th scope="row"> <%= attachment_image_tag user,:profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></th>
        <td><%= user.name %></td>
        <td><%=link_to "Show", user_path(user.id) %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
  </div>
</main>
