 <table class="table">
        <h3>User info</h3>
        <%= attachment_image_tag user,:profile_image, :fill, 60 , 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <thead>
          <tr>
            <th scope="col">name</th>
            <th scope="col"><%=user.name %></th>
          </tr>
          <tr>
            <th scope="col">introdcution</th>
            <th scope="col"><%=user.introduction %></th>
          </tr>
        </thead>
        <tr scope="col">
         <% if current_user.id ==  user.id %>
         <td><%=link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block  fas fa-user-cog" %></td>
         <% else %>
         <td><%=link_to "", user_path(current_user), class: "btn btn-outline-secondary btn-block  fas fa-user-cog" %></td>
         <% end %>
        </tr>
      </table>