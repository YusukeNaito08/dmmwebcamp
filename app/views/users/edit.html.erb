<main>
  <% if @user.errors.any? %>
   <%= @user.errors.count %> error
   <% @user.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
  <% end %>
  
  <div class ="container mt-5">
    <div class ="row">
      <div class ="col-md-8 mx-auto">
        <h3>User info</h3>
        <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label for= "inputname">Name</label>
          <%=f.text_field :name, autofocus: true, id:"inputname", class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Image</label>
          <%=f.attachment_field :profile_image, class: "form-control-file" %>
        </div>
        <div class="form-group">
          <label for= "inputintroduction">Introduction</label>
          <%=f.text_area :introduction, id:"inputintroduction", class: "form-control" %>
        </div>
          <%=f.submit 'Update User', class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</main>