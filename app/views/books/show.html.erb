<main>
  <div class ="container mt-5">
    <div class="row">
      <div class="col-md-3">
       <%= render 'users/userinfo', user: @user %>

       <%= render 'form', book: @book_new %>
     </div>

    <div class="col-md-8">
    <table class="table">
    <h3>Book detail</h3>
      <tbody>
        <tr>
          <td><%= attachment_image_tag @book.user,:profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></br>
          <%= @book.user.name %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>

          <td id= "favorite-btn-<%= @book.id %>">
         <%= render 'favorites/favorite-btn', book: @book %>
         </td>

          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
          <td><%= link_to "Delete",book_path(@book.id), method: :delete,
            data: {confirm: "Are you Sure?"}, class: "btn btn-danger"%></td>
          <% end %>
        </tr>
      </tbody>
     </table>
     <table class="table">
      <h4>Comment  <%= @book.book_comments.count %></h4>
      <tbody id="comment-area">

          <%= render 'book_comments/index', book: @book  %>

      </tbody>
     </table>

      <div id="new-coment">
     <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>

  </div>
  </div>
</main>