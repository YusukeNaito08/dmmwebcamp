<main>
  <% if @book.errors.any? %>
   <%= @book.errors.count %> error
   <% @book.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
  <% end %>
  
  
  <div class ="container mt-5">
    <div class ="row">
      <div class ="col-md-8 mx-auto">
        <h3>Editing Book</h3>
        <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for= "inputtitle">Title</label>
          <%=f.text_field :title, id:"inputtitle", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for= "inputbody">Opinion</label>
          <%=f.text_area :body, id:"inputbody", class: "form-control" %>
        </div>
          <%=f.submit 'Update Book', class: "btn btn-success" %>
        <% end %>
        <span><%= link_to "Show |", book_path(@book.id) %></span>
        <span><%= link_to "Back", books_path %></span>
      </div>
    </div>
  </div>
</main>