<main>

  <div class ="container mt-5">
    <div class="row">
      <div class="col-md-3">
     <%= render 'users/userinfo', user: @user %>

     <%= render 'form', book: @book %>
     </div>

    <div class="col-md-8">
    <table class="table">
    <h3>Books</h3>
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">title</th>
          <th scope="col">Opinion</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
      <tr>
        <th scope="row"><%= attachment_image_tag book.user,:profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %></th>
        <td><%= link_to  book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>

       <td id= "favorite-btn-<%= book.id %>">
         <%= render 'favorites/favorite-btn',  book: book %>
       </td>

        <td> <i class="far fa-comment"></i></br><%=link_to  "#{book.book_comments.count}", book_path(book.id) %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
 </div>
 </div>
</main>