<!DOCTYPE html>
<html>
  <head>
    <title>Bookers02</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>

    <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
    <% end %>

    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
